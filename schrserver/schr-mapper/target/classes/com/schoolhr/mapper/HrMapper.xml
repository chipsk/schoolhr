<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.schoolhr.mapper.HrMapper">
    <insert id="insert"></insert>
    <insert id="insertSelective"></insert>
    <update id="updateByPrimaryKeySelective"></update>
    <update id="updateByPrimaryKey"></update>
    <update id="updatePasswd"></update>
    <update id="updateUserface"></update>
    <delete id="deleteByPrimaryKey"></delete>
    <select id="selectByPrimaryKey" resultType="com.schoolhr.model.Hr"></select>
    <select id="getHrRolesById" resultType="com.schoolhr.model.Role">
        SELECT r.* FROM role r,hr_role hrr WHERE hrr.`rid`=r.`id` AND hrr.`hrid`=#{id}
    </select>
    <select id="getAllHrs" resultType="com.schoolhr.model.Hr"></select>
    <select id="getAllHrsExceptCurrentHr" resultType="com.schoolhr.model.Hr"></select>
    <select id="loadUserByUsername" resultType="com.schoolhr.model.Hr">
        select * from hr where username=#{username}
    </select>
</mapper>