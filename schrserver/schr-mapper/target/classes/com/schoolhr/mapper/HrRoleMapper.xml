<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.schoolhr.mapper.HrRoleMapper">
    <insert id="insert"></insert>
    <insert id="insertSelective"></insert>
    <insert id="addRole">
        insert into hr_role (hrid,rid) values
        <foreach collection="rids" item="rid" separator=",">
            (#{hrid},#{rid})
        </foreach>
    </insert>
    <update id="updateByPrimaryKeySelective"></update>
    <update id="updateByPrimaryKey"></update>
    <delete id="deleteByPrimaryKey"></delete>
    <delete id="deleteByHrid">
        delete from hr_role where hrid=#{hrid}
    </delete>
    <select id="selectByPrimaryKey" resultType="com.schoolhr.model.HrRole"></select>
</mapper>